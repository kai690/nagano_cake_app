<div class = 'container'>
  <div class = 'row mt-5'>
    <div class = 'col-3'>
      <h3 class = 'text-center'>ショッピングカート</h3>
    </div>
    <div class = 'col-9 text-right'>
      <%= link_to 'カートを空にする', root_path, class: 'btn btn-danger' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込み）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to item_path(cart_item.item) do %>
            <%= attachment_image_tag cart_item.item, :image, :fill, 60, 40, fallback: "no_image.jpg" %>
            <%= cart_item.item.name %>
          <% end %>
        </td>
        <td><%= (cart_item.item.price * 1.1).round %></td>

        <td>
          <%= cart_item.amount %>
          <%# form_with model:cart_item, local:true do |f| %>
          <%# f.select :amount, [["１", "1"], ["２", "2"], ["３", "3"], ["４", "4"], ["５", "5"]], include_blank: "数量選択" %>
          <%# f.hidden_field :item_id, :value => cart_item.item.id %>
          <%# f.submit '変更', class: 'btn btn-success' %>
          <%# end %>
        </td>

        <td><%= (cart_item.amount * cart_item.item.price * 1.1).round %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class = 'row justify-content-between'>
    <div class = 'col-2'>
      <%= link_to '買い物を続ける', items_path, class: 'btn btn-primary' %>
    </div>
    <div class = 'col-5'>
      <table class = 'table'>
        <tr>
          <th class = 'table-secondary'>合計金額</th>
          <td>aaa</td>
        </tr>
      </table>
    </div>
  </div>

  <div class = 'row justify-content-center'>
    <div class = 'col-4 '>
      <%= link_to "情報入力へ進む", new_order_path, class: 'btn btn-success btn-lg text-center' %>
    </div>
  </div>

</div>
<div class = 'container'>
  <div class = 'row mt-5'>
    <div class = 'col-3'>
      <h3 class = 'text-center'>ショッピングカート</h3>
    </div>
    <div class = 'col-9 text-right'>
      <%= link_to 'カートを空にする', root_path, class: 'btn btn-danger' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込み）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <th><%= cart_item.item.name %></th></th>
        <td><</td>
        <td>Otto</td>
        <td>@mdo</td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body calss = 'd-flex flex-column vh-100'>
    <header>
      <nav class = 'navbar navbar-expand-lg bg-light'>
        <div class = 'container'>
          <%= link_to "ながのCAKE", root_path, class: 'navbar-brand p-3 text-dark' %>
          <div class = 'collapse navbar-collapse'>


          <div class = 'navbar-nav ml-auto'>
            <% if customer_signed_in? %>

            <li class = 'nav-item'>
              <%= link_to 'マイページ', customer_path(current_customer), class: 'nav-link text-dark' %>
            </li>

            <li class = 'nav-item'>
              <%= link_to '商品一覧', items_path, class: 'nav-link text-dark' %>
            </li>

            <li class = 'nav-item'>
              <%= link_to 'カート', cart_items_path, class: 'nav-link text-dark' %>
            </li>

            <li class = 'nav-item'>
              <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>

            <% else %>

            <li class = 'nav-item'>
              <%= link_to 'About', root_path, class: 'nav-link text-dark' %>
            </li>

            <li class = 'nav-item'>
              <%= link_to '商品一覧', root_path, class: 'nav-link text-dark' %>
            </li>

            <li class = 'nav-item'>
              <%= link_to '新規登録', new_customer_registration_path, class: 'nav-link text-dark' %>
            </li>

            <li class = 'nav-item'>
              <%= link_to 'ログイン', new_customer_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
          </div>
          </div>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

<div class = 'container'>
  <div class = 'row mt-3'>
    <div class = 'col-3'>
       <h3 class = 'text-center'>ジャンル検索</h3>
      <table class = 'table'>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <th>
              <%= link_to genre.name, root_path %>
            </th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

    <div class = 'col-8 offset-md-1'>
      <div class = 'container'>
        <h2 class = 'mt-5'>商品一覧</h2>
        <div class = 'row mt-2'>

          <% @items.each do |item| %>
          <div class = 'col-3'>
            <div class = 'row'>
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg"%>
              <% end %>
            </div>
            <div class = 'row'>
              <%= item.name %>
            </div>
            <div class = 'row'>
              ￥<%= item.price %>
            </div>

          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<div class = 'container'>
  <div class = 'row mt-5'>
    <div class = 'col-3'>
    </div>

    <div class = 'col-4'>
      <%= attachment_image_tag @item, :image, :fill, 300, 200, fallback: "no_image.jpg"%>
    </div>
    <div class = 'col-5'>
      <h2><%= @item.name %></h2>

      <div class = 'row'>
        <div class = 'col-12'>
          <%= @item.introduction %>
        </div>
      </div>

      <div class = 'row'>
        <div class = 'col-5'>
          <h3>￥<%= (@item.price * 1.1).round %>（税込み）</h3>
        </div>
      </div>
      <div class = 'row'>
        <%= form_with model: @cart_item, local:true do |f| %>
        <div class = 'col-6'>
          <%= f.select :amount, [["１", "1"], ["２", "2"], ["３", "3"], ["４", "4"], ["５", "5"]], include_blank: "数量選択" %>
        </div>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div class = 'col-5 mt-2'>
          <%= f.submit 'カートに追加', class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class = 'container'>
  <div class = 'row mt-5'>
    <div class = 'col-3'>
       <h3 class = 'text-center'>ジャンル検索</h3>
      <table class = 'table'>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <th>
              <%= link_to genre.name, root_path %>
            </th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

    <div class = 'col-4'>
      <%= attachment_image_tag @item, :image, :fill, 300, 200, fallback: "no_image.jpg"%>
    </div>
    <div class = 'col-5'>
      <h2><%= @item.name %></h2>

      <div class = 'row'>
        <div class = 'col-12'>
          <%= @item.introduction %>
        </div>
      </div>

      <div class = 'row'>
        <div class = 'col-5'>
          <h3>￥<%= @item.price * 1.1 %>（税込み）</h3>
        </div>
      </div>
      <div class = 'row'>
        <div class = 'col-5'>
          
        </div>
        <div class = 'col-5'>
          
        </div>
      </div>
    </div>
  </div>
</div>
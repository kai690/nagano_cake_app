<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class = 'container'>

    <h2 class = 'col-3 bg-light mt-5 text-center'>新規会員登録</h2>
    <div class = 'row'>
      <div class = 'mx-auto col-12'>
        <table class = 'table'>
          <tbody>
            <tr>
              <td>氏名</td>
              <td>
                <%= f.label :（姓） %>
                <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
              </td>

              <td>
                  <%= f.label :（名） %>
                  <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
                </div>
              </td>
            </tr>

            <tr>
              <td>フリガナ</td>
              <td>
                <%= f.label :（セイ） %>
                <%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %>
              </td>

              <td>
                <%= f.label :（メイ） %>
                <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td>郵便番号（ハイフンなし）</td>
              <td>
                <%= f.text_field :postal_code, autofocus: true, class: 'form-control' %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan='2'>
                <%= f.text_field :address, autofocus: true, class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <td>電話番号（ハイフンなし）</td>
              <td>
                  <%= f.text_field :telephone_number, autofocus: true, class: 'form-control' %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td>パスワード（６文字以上）</td>
              <td>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <td>パスワード（確認用）</td>
              <td>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class = 'row justify-content-center'>
          <div class = 'col-3'>
            <%= f.submit "新規登録", class: 'btn btn-success btn-lg ' %>
          </div>
        </div>
      </div>
    </div>
    <div class = 'row'>
      <div class = 'col-4'>
        <h2 class = 'bg-light mt-5 text-center'>すでに登録済みの方</h2>
        <p><%= link_to 'こちら', new_admin_session_path %>からログインしてください。</p>
      </div>
    </div>
  </div>
<% end %>


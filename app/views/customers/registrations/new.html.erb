<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class = 'container'>

    <h2 class = 'col-3 bg-light mt-5 text-center'>新規会員登録</h2>
    <div class = 'row'>
      <div class = 'mx-auto col-7'>
        <div class = 'form'>

          <div class = 'row'>

            <div class="form-group">
              <%= f.label :（姓） %>
              <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :（名） %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class = "row">
            <div class="form-group">
              <%= f.label :（セイ） %>
              <%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :（メイ） %>
              <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class = "row">
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class = 'row'>
            <div class="form-group">
            <%= f.label :郵便番号 %>
            <%= f.text_field :postal_code, autofocus: true, class: 'form-control' %>
            </div>
          </div>
          <div class = "row">
            <div class = "col-7">
              <div class="form-group">
                <%= f.label :住所 %>
                <%= f.text_field :address, autofocus: true, class: 'form-control' %>
              </div>
            </div>

          </div>

          <div class = 'row'>
            <div class="form-group">
            <%= f.label :電話番号（ハイフンなし） %>
            <%= f.text_field :telephone_number, autofocus: true, class: 'form-control' %>
            </div>
          </div>


        　<div class = "row">
          　 <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>
        　</div>

          <div class = 'row'>
            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>



          <div class="form-group">
            <%= f.submit "Sign up" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


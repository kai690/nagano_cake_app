<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-3'>
      <h3 class = 'text-center'>会員情報編集</h3>
    </div>
  </div>
  <div class = 'row '>
    <div class = 'col-10'>
      <table class = 'table'>
        <!--<thead>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--</thead>-->
        <%= form_with model:@customer, local:true do |f| %>
        <tbody>
          <tr>
            <td>氏名</td>
          <td>
            <%= f.label :（姓） %>
            <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
          </td>

          <td>
              <%= f.label :（名） %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </div>
          </td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.label :（セイ） %>
            <%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %>
          </td>

          <td>
            <%= f.label :（メイ） %>
            <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td>
            <%= f.text_field :postal_code, autofocus: true, class: 'form-control' %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan = '2'>
            <%= f.text_field :address, autofocus: true, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td>
              <%= f.text_field :telephone_number, autofocus: true, class: 'form-control' %>
          </td>
          <td></td>
        </tr>
        </tbody>


      </table>

      </div>
    </div>
    <div class = 'row justify-content-around'>
      <div class = 'col-4'>
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      </div>
      
      <div class = 'col-3'>
        <%= link_to '退会する',unsubscribe_path, class: 'btn btn-danger text-right' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
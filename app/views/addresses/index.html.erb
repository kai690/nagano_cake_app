<div class = 'container'>
  <div class = row>
    <div class = 'col-3'>
      <h2 class = 'bg-light mt-5 text-center'>配送先登録/一覧</h2>
    </div>
  </div>
  <div class = 'row'>
    <div class = 'col-12'>
      <table class = 'table'>
        <%= form_with model:@address, local:true do |f| %>
        <tbody>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan = '2'><%= f.text_field :address, class: 'form-control' %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :name %></td>
            <td></td>
            <td><%= f.submit '新規登録', class: 'btn btn-success'%></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class = 'row'>
    <div class = 'col-10'>
      <table class = 'table'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_address_path(address),class: 'btn btn-success' %><%= link_to '削除する', address_path(address), method: :delete, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
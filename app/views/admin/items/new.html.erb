<div class = 'container'>
  <h2 class = 'col-4 bg-light mt-5 text-center'>商品新規登録</h2>

  <div class = 'row'>
    <div class = 'col-8 mx-auto'>

      <form class = 'form mt-5'>
        <%= form_with model: @item, url: new_admin_item_path, local:true do |f| %>

        <div class = 'form-group row'>
          <%= f.label :商品画像, class: 'col-2 col-form-label' %>
          <div class = 'col-6'>
            <%= f.attachment_field :image, class: '' %>
          </div>
        </div>
        <div class = 'form-group row'>
          <%= f.label :商品名, class: 'col-2 col-form-label' %>
          <div class = 'col-6'>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class = 'form-group row'>
          <%= f.label :商品説明, class: 'col-2 col-form-label' %>
          <div class = 'col-6'>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
        </div>

        <div class = 'form-group row'>
          <%= f.label :ジャンル, class: 'col-2 col-form-label' %>
          <div class = 'col-6'>
            <%= f.collection_select :genre, Genre.all, :id, :name, include_blank: "選択して下さい" %>
          </div>
        </div>

        <% end %>
      </form>
    </div>
  </div>
</div>
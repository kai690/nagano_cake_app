<div class = 'container'>
  <h2 class = 'col-4 bg-light mt-5 text-center'>商品編集</h2>

  <div class = 'row'>
    <div class = 'col-8 mx-auto'>

        <%= form_with model: @item, url: admin_items_path, local:true do |f| %>

        <div class = 'form-group row'>
          <%= f.label :商品画像, class: 'col-3 col-form-label' %>
          <div class = 'col-6'>
            <%= f.attachment_field :image, class: '' %>
          </div>
        </div>

        <div class = 'form-group row'>
          <%= f.label :商品名, class: 'col-3 col-form-label' %>
          <div class = 'col-6'>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class = 'form-group row'>
          <%= f.label :商品説明, class: 'col-3 col-form-label' %>
          <div class = 'col-6'>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
        </div>

        <div class = 'form-group row'>
          <%= f.label :ジャンル, class: 'col-3 col-form-label' %>
          <div class = 'col-6'>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class: '' %>
          </div>
        </div>

        <div class = 'form-group row'>
          <%= f.label :税抜き価格, class: 'col-3 col-form-label' %>
          <div class = 'col-6'>
            <%= f.text_field :price, placeholder: '1000', class: 'form-control' %>
          </div>
          <%= f.label :円, class: 'col-1 col-form-label' %>
        </div>

        <div class = 'form-group row'>
          <%= f.label :販売ステータス, class: 'col-3 col-form-label' %>
          <div class="col-6">
            <label><%= f.radio_button :is_active, true %> 販売中</label>
            <label><%= f.radio_button :is_active, false %> 販売停止中</label>
          </div>
        </div>
        <div class = 'row'>
          <div class = 'col-10 text-center'>
            <%= f.submit '変更を保存' , class: "btn btn-success btn-lg" %>
          </div>
        </div>


        <% end %>
    </div>
  </div>
</div>
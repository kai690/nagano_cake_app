<div class = 'container'>
  <h2 class = 'col-4 bg-light mt-5 mb-5 text-center'>商品詳細</h2>
  <div class = 'row'>
    <div class = col-4>
      <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "no_image.jpg"%>
    </div>
    <div class = 'col-7 mx-auto'>
      <table class = ''>
        <tbody>
          <tr>
            <th class = 'col-2'>商品名</th>
            <td class = col-6><%= @item.name %></td>
          </tr>
          <tr>
            <th class = 'col-2'>商品説明</th>
            <td class = col-6><%= @item.introduction %></td>
          </tr>
          <tr>
            <th class = 'col-2'>ジャンル</th>
            <td class = col-6><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th class = 'col-2'>税込み価格<br>(税抜き価格)</th>
            <td class = col-6><%= @item.price*1.1 %>(<%= @item.price %>)円</td>
          </tr>
          <tr>
            <th class = 'col-2'>販売ステータス</th>
            <td class = col-6><%= @item.is_active ? '販売中' : '販売停止中' %></td>
          </tr>


        </tbody>
      </table>
    </div>
  </div>
  <div class = 'row mt-5'>
    <div class = 'col-10 text-center'>
      <%= link_to '編集する', edit_admin_item_path(params[:id]), class: 'btn btn-success btn-lg' %>
    </div>
  </div>
</div>
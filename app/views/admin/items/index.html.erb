<p class = 'text-success'><%= notice %></p>
<div class = 'container'>
  <div class = 'row justify-content-around mt-5'>
    <div class = 'col-4'>
      <h2 class = ' bg-light text-center'>商品一覧</h2>
    </div>
    <div class = 'col-2'>
      <%= link_to '商品追加', new_admin_item_path, class: 'btn btn-success' %>
    </div>
  </div>


  <div class = 'row mt-5'>
    <div class = 'col-10 mx-auto'>
      <table class = 'table '>

        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th class = ''><%= link_to item.name, admin_item_path(item.id) %></th>
            <th><%= item.price %></th>
            <th><%= item.genre.name %></th>
            <th><%= item.is_active ? '販売中' : '販売停止中' %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
<p class = 'text-success'><%= notice %></p>
<div class = 'container'>
  <h2 class = 'col-6 bg-light mt-5 text-center'><%= @customer.last_name + @customer.first_name %>さんの会員情報</h2>

  <div class = 'row mt-5'>
    <div class = 'col-10 mx-auto'>
      <table class = 'table '>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td><%= @customer.is_active ? '有効' : '退会' %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class = 'row mt-5 justify-content-center'>
    <div class = 'col-3'>
      <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
      <%= link_to '注文履歴', admin_path(@customer), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
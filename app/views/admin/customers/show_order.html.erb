<p class = 'text-success'><%= notice %></p>
<div class = 'container'>
  <div class = 'row justify-content-left mt-5'>
    <div class = 'col-12'>
      <h2 class = 'text-left'><%= @customer.last_name + @customer.first_name %>さんの注文履歴一覧</h2>
    </div>
  </div>

  <div class = 'row mt-5'>
    <div class = 'col-10 mx-auto'>
      <table class = 'table '>

        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th><%= link_to order.created_at, admin_order_path(order) %></th>
            <th><%= order.name %></th>
            <th><%# order.order_items.where(:amount).count %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
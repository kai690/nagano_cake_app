<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
  <div class = 'container'>

    <h2 class = 'col-7 bg-light mt-5 text-center'><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
    <div class = 'row'>
      <div class = 'mx-auto col-7'>
        <table class = 'table'>
          <tbody>
            <tr>
              <th>会員ID</th>
              <td><%= @customer.id %></td>
              <td></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td><%= f.text_field :last_name, autofocus: true, class: 'form-control' %></td>
              <td><%= f.text_field :first_name, autofocus: true, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, autofocus: true, class: 'form-control' %></td>
              <td></td>
            </tr>
            <tr>
              <th>住所</th>
              <td colspan = '2'><%= f.text_field :address, autofocus: true, class: 'form-control' %></td>
              <td></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :telephone_number, autofocus: true, class: 'form-control' %></td>
              <td></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></td>
              <td></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <label><%= f.radio_button :is_active, true %> 有効</label>
                <label><%= f.radio_button :is_active, false %> 退会</label>
              </td>
              <td></td>
            </tr>


          </tbody>
        </table>
          <div class="form-group">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
  <div class = 'container'>

    <h2 class = 'col-5 bg-light mt-5 text-center'><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
    <div class = 'row'>
      <div class = 'mx-auto col-7'>
        <div class = 'form'>

          <div class = 'row'>

            <div class="form-group">
              <%= f.label :（姓） %>
              <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :（名） %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class = "row">
            <div class="form-group">
              <%= f.label :（セイ） %>
              <%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :（メイ） %>
              <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %>
            </div>
          </div>



          <div class = 'row'>
            <div class="form-group">
            <%= f.label :郵便番号 %>
            <%= f.text_field :postal_code, autofocus: true, class: 'form-control' %>
            </div>
          </div>
          <div class = "row">
            <div class = "col-7">
              <div class="form-group">
                <%= f.label :住所 %>
                <%= f.text_field :address, autofocus: true, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class = 'row'>
            <div class="form-group">
            <%= f.label :電話番号（ハイフンなし） %>
            <%= f.text_field :telephone_number, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class = "row">
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class = 'form-group row'>
          <%= f.label :会員ステータス, class: 'col-3 col-form-label' %>
            <div class="col-6">
              <label><%= f.radio_button :is_active, true %> 有効</label>
              <label><%= f.radio_button :is_active, false %> 退会</label>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


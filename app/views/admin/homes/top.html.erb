<p class = 'text-success'><%= notice %></p>
<div class = 'container'>
  <div class = 'row justify-content-around mt-5'>
    <div class = 'col-4'>
      <h2 class = ' bg-light text-center'>注文履歴一覧</h2>
    </div>
  </div>

  <div class = 'row mt-5'>
    <div class = 'col-10 mx-auto'>
      <table class = 'table '>

        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th><%= link_to order.created_at.strftime("%Y-%m-%d %H時 %M分"), admin_order_path(order) %></th>
            <th><%= order.name %></th>
            <% order.order_items.each do |order_item| %>
              <% @amount += order_item.amount %>
            <% end %>
            <th><%= @amount %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
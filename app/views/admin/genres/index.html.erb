<p class = 'text-success'><%= notice %></p>
<div class = 'container'>
  <h2 class = 'col-4 bg-light mt-5 text-center'>ジャンル一覧・追加</h2>
  <div class = 'row'>
    <div class = 'col-8'>
      <div class = 'form'>
        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>

        <div class = 'form-group'>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <%= f.submit '新規登録' , class: "btn btn-success" %>

        <% end %>
      </div>
    </div>
  </div>
  <div class = 'row'>
    <div class = 'col-5'>
      <table class = 'table'>
        <thead>
          <tr>
            <td>ジャンル</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
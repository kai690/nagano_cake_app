<div class = 'container'>
  <h2 class = 'col-4 bg-light mt-5 text-center'>ジャンル一覧・追加</h2>
  <div class = 'row'>
    <div class = 'col-8'>
      <div class = 'form'>
        <%= form_with model: @genre, url: new_admin_genre_path, local:true do |f| %>

        <div class = 'form-group'>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <%= f.submit '新規登録' , class: "btn btn-success" %>

        <% end %>

      </div>
    </div>
  </div>
  <div class = 'row'>
    <div class = 'col-8'>
      <table class = 'table'>
        <thead>
          <tr>
            <th></th>
            <th>ジャンル</th>
          </tr>
        </thead>

        <tbody>
          <%= @genres.each do |genre| %>
          <tr>
            <th><%= genre.name %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>